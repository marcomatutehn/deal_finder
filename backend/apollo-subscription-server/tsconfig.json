{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6",
        "esnext.asynciterable",
        "dom"
     ],
     "allowJs": true,
     "target": "es5",
     "sourceMap": false,
     "outDir": "../dist",
     "module": "commonjs",
     "moduleResolution": "node",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "allowSyntheticDefaultImports": true
  },
  "exclude": [
     "./node_modules"
  ],
  "include": [
     "./src/**/*"
  ]
}